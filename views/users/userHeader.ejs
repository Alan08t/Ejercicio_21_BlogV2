<section class="container pb-4">
  <div class="row p-4 shadow bg-white rounded-bottom">
    <div class="col-4 d-flex align-items-start justify-content-center justify-content-md-end">
      <img class="border rounded-circle img-thumbnail" src="<%= avatar %>" alt="" />
    </div>
    <div class="col-8">
      <h1 class="display-1"><%= firstname %> <%= lastname %></h1>
      <hr />

      <span class="text-secondary fs-6"><%= username %></span>
      <p class="mb-4 fs-3 fw-lighter lh-lg"><%= description%></p>
      <% if (roleId > 1) { %>
      <a href="/articulos/crear">
        <button class="btn btn-success btn-m">Crear articulo</button>
      </a>
      <% } %>
    </div>
  </div>
</section>
