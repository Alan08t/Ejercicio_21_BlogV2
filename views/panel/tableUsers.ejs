<section class="container">
  <div class="table-responsive">
    <table class="table table-striped table-hover border shadow mt-5">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Nombre</th>
          <th scope="col ">Apellido</th>
          <th scope="col">Avatar</th>
          <th scope="col">Email</th>
          <th scope="col">CreatedAt</th>
          <th scope="col">UpdatedAt</th>
        </tr>
      </thead>
      <tbody>
        <% for(item of users) { %> <% if (locals.user.roleId === 4) { %>
        <tr>
          <th scope="row"><%= item.id %></th>
          <td><%= item.firstname %></td>
          <td><%= item.lastname.slice(0, 100) %>...</td>
          <td><img src="<%= item.avatar %>" alt="" /></td>
          <td><%= item.email %></td>

          <td><%=format(item.createdAt,"dd MMMM yyyy") %></td>
          <td><%=format(item.updatedAt,"dd MMMM yyyy") %></td>

          <td>
            <a class="text-decoration-none" href="/usuarios/<%=item.id%>/editar"
              ><button class="btn btn-dark w-100">
                Edit <ion-icon name="create-outline"></ion-icon></button
            ></a>

            <a class="text-decoration-none" href="/usuarios/<%=item.id%>/eliminar"
              ><button type="button" class="btn btn-danger w-100">
                Delete <ion-icon name="trash-outline"></ion-icon></button
            ></a>
          </td>
        </tr>
        <% } %><% } %>
      </tbody>
    </table>
  </div>
</section>
